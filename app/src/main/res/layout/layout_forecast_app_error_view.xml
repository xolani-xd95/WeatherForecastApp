<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="239dp"
        android:layout_height="102dp"
        android:src="@drawable/logo_white_cropped"/>

    <TextView
        android:id="@+id/txt_unavailable_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/sanspro_semibold"
        android:text="@string/app_unavailable"
        android:textSize="@dimen/text_size_xmedium"
        android:textColor="@color/text"/>

    <TextView
        android:id="@+id/txt_app_error_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:textAlignment="center"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:fontFamily="@font/sanspro_regular"
        android:text="@string/app_unavailable_body"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/text"/>

    <TextView
        android:id="@+id/btn_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:textSize="@dimen/text_size_small"
        android:fontFamily="@font/sanspro_semibold"
        android:textColor="@color/sunrise"
        android:text="@string/go_to_settings"/>
</LinearLayout>